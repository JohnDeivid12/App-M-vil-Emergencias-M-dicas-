<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/titulo_app"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <!-- Logo reducido -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="128dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/desc_logo"
        android:src="@drawable/logo" />

    <!-- BotÃ³n Emergencia -->
    <Button
        android:id="@+id/btn_emergencia"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#D50000"
        android:text="@string/btn_emergencia"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Primera fila: Hospitales, ClÃ­nicas, Farmacias -->
    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_hospitales"
            android:layout_width="21dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#304FFE"
            android:text="@string/btn_hospitales"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_clinicas"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#304FFE"
            android:text="@string/btn_clinicas"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_farmacias"
            android:layout_width="20dp"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#304FFE"
            android:text="@string/btn_farmacias"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Segunda fila: Mapa, Primeros Auxilios -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_mapa"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#91E4FB"
            android:text="@string/btn_mapa"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_primeros_auxilios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#91E4FB"
            android:text="@string/btn_auxilios"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- ðŸš‘ Formulario de registro -->
    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_nombre"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:layout_marginTop="12dp"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_direccion"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <!-- ðŸ“ž Campo TelÃ©fono -->
    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_telefono"
        android:inputType="phone"
        android:autofillHints="phone"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_registrar"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnVerListado"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_listado"
        android:backgroundTint="#304FFE"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>
